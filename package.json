        "@actions/exec": "^1.0.3",
        "@actions/io": "^1.0.2",
        "@iarna/toml": "^2.2.3",
        "archiver": "^3.1.1",
        "fast-glob": "^3.2.2",
        "js-yaml": "^3.13.1",
        "npm-check-updates": "^4.1.2",
        "string-argv": "^0.3.1"
    },
    "devDependencies": {
        "@types/jest": "^25.2.1",
        "@types/node": "^14.0.6",
        "@zeit/ncc": "^0.22.1",
        "jest": "^25.3.0",
