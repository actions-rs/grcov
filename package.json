{
    "name": "rust-grcov",
    "version": "0.1.6",
    "private": false,
    "description": "Collect and aggregate code coverage information with the Mozilla grcov tool",
    "main": "lib/main.js",
    "directories": {
        "lib": "lib",
        "test": "__tests__"
    },
    "scripts": {
        "build": "ncc build src/main.ts --minify",
