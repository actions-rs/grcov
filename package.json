        "@actions/exec": "^1.0.3",
        "@actions/io": "^1.0.1",
        "@iarna/toml": "^2.2.3",
        "archiver": "^3.1.1",
        "fast-glob": "^3.1.1",
        "js-yaml": "^3.13.1",
        "string-argv": "^0.3.1"
    },
    "devDependencies": {
        "@types/jest": "^24.0.23",
        "@types/node": "^12.12.14",
        "@zeit/ncc": "^0.20.5",
        "jest": "^24.9.0",
        "jest-circus": "^24.9.0",
        "ts-jest": "^24.2.0",
        "typescript": "^3.7.2"
